{
  "manifest_version": 3,
  "name": "Smile Border",
  "version": "1.0",
  "description": "Add a floating smile emoji that adds a green border to webpages when clicked",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 